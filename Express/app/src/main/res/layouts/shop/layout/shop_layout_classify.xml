<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_20"
        android:background="#e5e5e5" />

    <!-- 乐观 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_120"
        android:background="@color/app_vi"
        android:paddingLeft="@dimen/xx_40"
        android:paddingRight="@dimen/xx_40">

        <ImageView
            android:layout_width="@dimen/xx_35"
            android:layout_height="@dimen/xx_29"
            android:layout_centerVertical="true"
            android:src="@drawable/shop_classify_icon_smile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xx_55"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="乐观"
            android:textColor="@color/deep_dark"
            android:textSize="@dimen/xx_40" />

        <frame.view.check.CheckImageView
            android:layout_width="@dimen/xx_31"
            android:layout_height="@dimen/xx_19"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:check_img="@drawable/shop_icon_arrow_down"
            app:is_img_checked="true"
            app:normal_img="@drawable/shop_icon_arrow_up" />
    </RelativeLayout>

    <!-- 小标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_90"
        android:paddingLeft="@dimen/xx_40"
        android:paddingRight="@dimen/xx_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="海皮三俩"
            android:textSize="@dimen/xx_35" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="更多 >"
            android:textSize="@dimen/xx_35" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_1"
            android:layout_alignParentBottom="true"
            android:background="#eee" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/xx_225"
        android:layout_height="@dimen/xx_270"
        android:layout_marginLeft="@dimen/xx_30"
        android:layout_marginTop="@dimen/xx_30"
        android:background="@drawable/material_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/xx_1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_213"
            android:scaleType="fitCenter"
            android:src="@drawable/collect_pic_test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_57"
            android:layout_marginTop="@dimen/xx_1"
            android:gravity="center"
            android:text="继续嗨"
            android:textColor="@color/deep_dark"
            android:textSize="@dimen/xx_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_20"
        android:layout_marginTop="@dimen/xx_30"
        android:background="#eee" />

    <!-- 悲观 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_120"
        android:background="@color/app_vi"
        android:paddingLeft="@dimen/xx_40"
        android:paddingRight="@dimen/xx_40">

        <ImageView
            android:layout_width="@dimen/xx_35"
            android:layout_height="@dimen/xx_29"
            android:layout_centerVertical="true"
            android:src="@drawable/shop_classify_icon_cry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xx_55"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="悲观"
            android:textColor="@color/deep_dark"
            android:textSize="@dimen/xx_40" />

        <frame.view.check.CheckImageView
            android:layout_width="@dimen/xx_31"
            android:layout_height="@dimen/xx_19"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:check_img="@drawable/shop_icon_arrow_down"
            app:is_img_checked="false"
            app:normal_img="@drawable/shop_icon_arrow_up" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/xx_225"
        android:layout_height="@dimen/xx_270"
        android:layout_marginLeft="@dimen/xx_30"
        android:layout_marginTop="@dimen/xx_30"
        android:background="@drawable/material_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/xx_1"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_213"
            android:scaleType="fitCenter"
            android:src="@drawable/collect_pic_test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_57"
            android:layout_marginTop="@dimen/xx_1"
            android:gravity="center"
            android:text="继续嗨"
            android:textColor="@color/deep_dark"
            android:textSize="@dimen/xx_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_20"
        android:background="#eee" />

    <!-- 中性 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_120"
        android:background="@color/app_vi"
        android:paddingLeft="@dimen/xx_40"
        android:paddingRight="@dimen/xx_40">

        <ImageView
            android:layout_width="@dimen/xx_35"
            android:layout_height="@dimen/xx_29"
            android:layout_centerVertical="true"
            android:src="@drawable/shop_classify_icon_neutral" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xx_55"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="中性"
            android:textColor="@color/deep_dark"
            android:textSize="@dimen/xx_40" />

        <frame.view.check.CheckImageView
            android:layout_width="@dimen/xx_31"
            android:layout_height="@dimen/xx_19"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:check_img="@drawable/shop_icon_arrow_down"
            app:is_img_checked="false"
            app:normal_img="@drawable/shop_icon_arrow_up" />
    </RelativeLayout>

    <!-- 小标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx_90"
        android:paddingLeft="@dimen/xx_40"
        android:paddingRight="@dimen/xx_40"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="海皮三俩"
            android:textSize="@dimen/xx_35" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="更多 >"
            android:textSize="@dimen/xx_35" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_1"
            android:layout_alignParentBottom="true"
            android:background="#eee" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/xx_225"
        android:layout_height="@dimen/xx_270"
        android:layout_marginLeft="@dimen/xx_30"
        android:layout_marginTop="@dimen/xx_30"
        android:background="@drawable/material_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/xx_1"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_213"
            android:scaleType="fitCenter"
            android:src="@drawable/collect_pic_test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx_57"
            android:layout_marginTop="@dimen/xx_1"
            android:gravity="center"
            android:text="继续嗨"
            android:textColor="@color/deep_dark"
            android:textSize="@dimen/xx_30" />
    </LinearLayout>
</LinearLayout>